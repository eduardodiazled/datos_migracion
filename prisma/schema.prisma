generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  celular      String        @id
  nombre       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  otpCode          String?
  otpExpires       DateTime?
  welcomeSent      Boolean       @default(false)
  magicToken       String?       @unique
  magicTokenExpires DateTime?
  transactions Transaction[]
}

model InventoryAccount {
  id               Int            @id @default(autoincrement())
  servicio         String
  tipo             String
  email            String
  password         String
  providerId       Int?
  dia_corte        Int?
  is_disposable    Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  fecha_activacion DateTime       @default(now())
  duracion_meses   Int            @default(1)
  provider         Provider?      @relation(fields: [providerId], references: [id])
  perfiles         SalesProfile[]
  transactions     Transaction[]
}

model SalesProfile {
  id            Int              @id @default(autoincrement())
  nombre_perfil String
  pin           String?
  estado        String           @default("LIBRE")
  accountId     Int
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  account       InventoryAccount @relation(fields: [accountId], references: [id])
  transactions  Transaction[]
}

model Transaction {
  id                Int               @id @default(autoincrement())
  clienteId         String
  perfilId          Int?
  accountId         Int?
  estado_pago       String
  metodo_pago       String?
  groupId           String?
  fecha_inicio      DateTime
  fecha_vencimiento DateTime
  monto             Float
  descripcion       String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  account           InventoryAccount? @relation(fields: [accountId], references: [id])
  client            Client            @relation(fields: [clienteId], references: [celular])
  profile           SalesProfile?     @relation(fields: [perfilId], references: [id])
}

model Expense {
  id          Int      @id @default(autoincrement())
  categoria   String
  descripcion String
  monto       Float
  fecha       DateTime
  metodo_pago String
  proveedor   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
}

model Provider {
  id        Int                @id @default(autoincrement())
  nombre    String             @unique
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  accounts  InventoryAccount[]
}

model PayrollState {
  id        Int      @id @default(autoincrement())
  lastReset DateTime @default(now())
}
